  padding-bottom: 20px; /* Espacement entre le texte et le bouton */
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.card:hover .side--front {
  transform: rotateY(-180deg);
}

.card:hover .side--back {
  transform: rotateY(0deg);
}

.title {
