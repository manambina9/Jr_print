  perspective: 1000px;
  position: relative;
}

.side {
  width: 100%;
  height: 100%;
  position: absolute;
  backface-visibility: hidden;
  transition: transform 0.8s;
  transform-style: preserve-3d;
  border-radius: 10px;
}

.side--front {
  background-color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
